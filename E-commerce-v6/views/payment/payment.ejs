
<%- include("../partials/header") %> 
<%- include("../partials/navbar") %>

<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 11rem;">

            <form class="needs-validation" action="#" method="POST" style="max-width: 50%; margin: 10px auto;" novalidate>
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="Account Holder Name" name="name" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                
                <div class="mb-3">
                    <label for="card" class="form-label">Card Number</label>
                    <input type="number" class="form-control" id="card" placeholder="card" name="card" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="date" class="form-label">Expiry Date</label>
                    <input type="date" class="form-control" id="card" placeholder="card" name="card" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                </div>


                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <textarea class="form-control" id="address" cols="30" rows="2" name="address" ></textarea>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
       
</div>

<%- include("../partials/footer") %>